{
  "name": "@lvjiaxuan/eslint-config-monorepo",
  "private": true,
  "scripts": {
    "lint": "oxlint . && eslint .",
    "lint:fix": "oxlint . --fix && eslint . --fix"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@lvjiaxuan/eslint-config": "workspace:*",
    "@types/eslint": "^8.56.3",
    "@types/node": "^20.11.20",
    "eslint": "npm:eslint-ts-patch@8.56.0-0",
    "eslint-ts-patch": "8.56.0-0",
    "oxlint": "^0.2.11",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "lvr": {
    "all": true,
    "tag": 10
  },
  "pnpm": {
    "patchedDependencies": {
      "@antfu/eslint-config@2.6.4": "patches/@antfu__eslint-config@2.6.4.patch"
    }
  },
  "simple-git-hooks": {
    "pre-commit": [
      "npx lint-staged"
    ]
  },
  "lint-staged": {
    "*": "pnpm run lint:fix"
  }
}
