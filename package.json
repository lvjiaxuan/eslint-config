{
  "name": "@lvjiaxuan/eslint-config",
  "type": "module",
  "version": "1.7.0",
  "private": false,
  "packageManager": "pnpm@8.14.1",
  "description": "My personal ESLint config preset.",
  "author": "lvjiaxuan <471501748@qq.com> (https://github.com/lvjiaxuan)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lvjiaxuan/eslint-config"
  },
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.ms",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "nr build --watch",
    "view": "nr dev & nlx eslint-flat-config-viewer",
    "build": "tsup src/index.ts --format=esm,cjs --dts",
    "lint": "eslint .",
    "prepublishOnly": "nr build"
  },
  "dependencies": {
    "@antfu/eslint-config": "^2.6.3",
    "@lvjiaxuan/eslint-plugin": "workspace:*",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.6",
    "eslint": "npm:eslint-ts-patch@8.56.0-0",
    "eslint-ts-patch": "8.56.0-0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "lvr": {
    "all": true,
    "tag": 10
  }
}