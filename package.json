{
  "name": "@lvjiaxuan/eslint-config-monorepo",
  "private": true,
  "scripts": {
    "lint": "nlx cross-env ESLINT_USE_FLAT_CONFIG=false eslint -c=.eslintrc.cjs .",
    "lint:flat": "nlx cross-env ESLINT_USE_FLAT_CONFIG=true eslint .",
    "test": "nr -r test",
    "build": "nr -r build",
    "prepare": "nr build",
    "release": "lvr --all --no-push"
  },
  "devDependencies": {
    "@lvjiaxuan/eslint-plugin": "workspace:*",
    "@rushstack/eslint-patch": "^1.3.3",
    "@types/eslint": "^8.44.2",
    "@types/node": "^20.6.0",
    "eslint": "^8.49.0",
    "execa": "^8.0.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0"
  },
  "lv": {
    "release": {
      "all": true
    }
  }
}
