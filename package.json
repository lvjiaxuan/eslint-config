{
  "name": "@lvjiaxuan/eslint-config-monorepo",
  "type": "module",
  "version": "1.12.1",
  "private": true,
  "packageManager": "pnpm@9.10.0",
  "scripts": {
    "lint": "eslint",
    "lintf": "eslint --fix",
    "oxlint": "oxlint && eslint",
    "oxlintf": "oxlint --fix && eslint --fix",
    "dev": "nlx @eslint/config-inspector"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.6.0",
    "@lvjiaxuan/eslint-config": "workspace:*",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.5.5",
    "eslint": "npm:eslint-ts-patch@9.8.0-1",
    "eslint-ts-patch": "9.8.0-1",
    "oxlint": "^0.9.5",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  },
  "lvr": {
    "all": true,
    "tag": 10
  },
  "simple-git-hooks": {
    "pre-commit": [
      "npx lint-staged"
    ]
  },
  "lint-staged": {
    "*": "pnpm run oxlintf"
  }
}
