{
  "name": "@lvjiaxuan/eslint-config-monorepo",
  "private": true,
  "scripts": {
    "lint": "nlx cross-env ESLINT_USE_FLAT_CONFIG=false eslint -c=.eslintrc.cjs .",
    "lint:flat": "nlx cross-env ESLINT_USE_FLAT_CONFIG=true eslint .",
    "test": "nr -r test",
    "build": "nr -r build",
    "prepare": "nr build",
    "release": "lvr --no-push"
  },
  "devDependencies": {
    "@lvjiaxuan/eslint-plugin": "workspace:*",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/eslint": "^8.37.0",
    "eslint": "^8.40.0",
    "execa": "^7.1.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "unbuild": "^1.2.1"
  },
  "lv": {
    "release": {
      "all": true
    }
  }
}
