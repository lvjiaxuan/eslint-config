{
  "name": "@lvjiaxuan/eslint-config",
  "type": "module",
  "version": "1.8.0",
  "private": false,
  "packageManager": "pnpm@8.14.1",
  "description": "My personal ESLint config preset.",
  "author": "lvjiaxuan <471501748@qq.com> (https://github.com/lvjiaxuan)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lvjiaxuan/eslint-config"
  },
  "keywords": [
    "eslint-config",
    "oxlint"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.ms",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "pnpm run build --watch",
    "view": "pnpm run dev & pnpm dlx eslint-flat-config-viewer",
    "build": "tsup src/index.ts --format=esm,cjs --dts",
    "lint": "oxlint . && eslint .",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@antfu/eslint-config": "^2.6.3",
    "@lvjiaxuan/eslint-plugin": "workspace:*",
    "@lvjiaxuan/eslint-plugin-oxlint": "workspace:*",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.7",
    "eslint": "npm:eslint-ts-patch@8.56.0-0",
    "eslint-plugin-oxlint": "^0.2.3",
    "eslint-ts-patch": "8.56.0-0",
    "oxlint": "^0.2.6",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "lvr": {
    "all": true,
    "tag": 10
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}