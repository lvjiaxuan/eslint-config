{
  "name": "@lvjiaxuan/eslint-config-monorepo",
  "type": "module",
  "version": "1.12.1",
  "private": true,
  "packageManager": "pnpm@10.6.0",
  "scripts": {
    "lint": "eslint",
    "lintf": "eslint --fix",
    "oxlint": "oxlint && eslint",
    "oxlintf": "oxlint --fix && eslint --fix",
    "dev": "nlx @eslint/config-inspector"
  },
  "peerDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@lvjiaxuan/eslint-plugin": "workspace:*",
    "eslint-plugin-oxlint": "catalog:"
  },
  "peerDependenciesMeta": {
    "@antfu/eslint-config": {
      "optional": true
    },
    "@lvjiaxuan/eslint-plugin": {
      "optional": true
    },
    "eslint-plugin-oxlint": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.8.7",
    "eslint": "9.22.0",
    "jiti": "^2.4.2",
    "oxlint": "^0.16.4",
    "simple-git-hooks": "^2.12.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.1.1"
  },
  "lvr": {
    "all": true,
    "tag": 10
  },
  "simple-git-hooks": {
    "pre-commit": [
      "npx lint-staged"
    ]
  },
  "lint-staged": {
    "*": "pnpm run oxlintf"
  }
}
