{
  "name": "@lvjiaxuan/eslint-config-monorepo",
  "type": "module",
  "version": "1.10.1",
  "private": true,
  "scripts": {
    "lint": "oxlint . && eslint",
    "lintf": "oxlint . --fix && eslint --fix",
    "view": "pnpm dlx @eslint/config-inspector"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.16.1",
    "@lvjiaxuan/eslint-config": "workspace:*",
    "@lvjiaxuan/eslint-plugin-oxlint": "workspace:^",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.12.8",
    "eslint": "9.1.0",
    "oxlint": "^0.3.1",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "lvr": {
    "all": true,
    "tag": 10
  },
  "simple-git-hooks": {
    "pre-commit": [
      "npx lint-staged"
    ]
  },
  "lint-staged": {
    "*": "pnpm run lintf"
  }
}
